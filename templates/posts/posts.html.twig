{% extends 'base.html.twig' %}

{% block body %}

    {% for post in posts %}
        <div class="card col-sm-6 text-center p-3">
            <h3 class="card-header">{{ post.title }}</h3>
            <div class="card-body">
                <h4 class="card-title">{{ post.author }}</h4>
                <p class="card-text">{{ post.body }}</p>
            </div>
        </div>
    {% endfor %}

{% endblock %}