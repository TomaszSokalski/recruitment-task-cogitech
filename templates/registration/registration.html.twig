{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container" style="width: 25rem;">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Create new account</h3>
                <div class="card-text">
                    {{ form_start(registrationForm, {'action': path('app_register'), 'method': 'POST'}) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.password.first) }}
                    {{ form_row(registrationForm.password.second) }}
                </div>
                <div class="d-flex justify-content-between align-items-center mt-2">
                    <a href="{{ path("app_login") }}">Already have an account?</a>

                    <button class="btn btn-primary btn-block" type="submit">
                        Register
                    </button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
