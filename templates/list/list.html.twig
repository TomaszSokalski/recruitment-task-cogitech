{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="card col-sm-6 text-center p-3">
            <h5 class="card-header">{{ post.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">{{ post.author }}</h5>
                <p class="card-text">{{ post.body }}</p>
                <a href="{{ path("app_list_delete", {'id': post.id}) }}" class="btn btn-outline-danger" type="button">Remove</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
